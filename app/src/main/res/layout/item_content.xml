<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/row_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/lv_corner"

    android:paddingBottom="5dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="5dp"

    tools:context=".MainActivity">

    <TextView
        android:id="@+id/titleCate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cate"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#000000"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/tv_word"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/titleCate"
        android:layout_marginLeft="20dp"
        android:text="Word"
        android:textColor="#bc181818"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/tv_termo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tv_word"
        android:layout_alignStart="@+id/tv_word"
        android:layout_below="@+id/tv_word"
        android:text="Termer"
        android:textColor="#b6303030"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">
        <ImageButton
            android:id="@+id/img_fav"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="5dp"
            android:layout_marginBottom="2dp"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_star_outline_20dp" />

        <ImageButton
            android:id="@+id/img_sound"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingRight="5dp"
            android:layout_alignLeft="@+id/img_fav"
            android:layout_alignStart="@+id/img_fav"
            android:layout_below="@+id/img_fav"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_volume_up_grey600_24dp" />

    </LinearLayout>


</RelativeLayout>


